<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
	http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">

	<!-- JSTL 配置 -->
	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/lib/c.tld</taglib-location>
		</taglib>
	</jsp-config>

	<display-name>pdh-java-web</display-name>

	<welcome-file-list>
		<welcome-file>visitorindex.jsp</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- Servlet声明 -->
	<servlet>
		<servlet-name>Hserv</servlet-name>
		<servlet-class>j2ee.Hserv</servlet-class>
	</servlet>

	<!-- Servlet映射 -->
	<servlet-mapping>
		<servlet-name>Hserv</servlet-name>
		<url-pattern>/Hserv</url-pattern>
	</servlet-mapping>

	<!-- 添加新的Servlet声明 -->
	<servlet>
		<servlet-name>ListStaffs</servlet-name>
		<servlet-class>hello.ListStaffsServlet</servlet-class>
	</servlet>

	<!-- 添加新的Servlet映射 -->
	<servlet-mapping>
		<servlet-name>ListStaffs</servlet-name>
		<url-pattern>/liststaffs</url-pattern>
	</servlet-mapping>

	<!-- 过滤器声明 -->
	<filter>
		<filter-name>UserIdFilter</filter-name>
		<filter-class>filter.UserIdFilter</filter-class>
	</filter>

	<!-- 过滤器映射 -->
	<filter-mapping>
		<filter-name>UserIdFilter</filter-name>
		<url-pattern>/index.jsp</url-pattern>
		<url-pattern>/fileslist.jsp</url-pattern>
		<url-pattern>/welcome.jsp</url-pattern>
		<url-pattern>/upload.html</url-pattern>
		<url-pattern>/userDetail.jsp</url-pattern>
	</filter-mapping>
	
</web-app>